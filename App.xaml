<Application x:Class="Converter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Converter"
             xmlns:converters="clr-namespace:Converter.Converters"
             
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <converters:ImageSizeConverter x:Key="ImageSizeConverter"/>
        <converters:UpperCaseConverter x:Key="UpperCaseConverter"/>
        <converters:MemSizeConverter x:Key="MemSizeConverter"/>
        <converters:ZoomConverter x:Key="ZoomConverter"/>
        <converters:ZoomLabelConverter x:Key="ZoomLabelConverter"/>
        <converters:ImageTranslateConverter x:Key="ImageTranslateConverter"/>
        <converters:MarginConverter x:Key="MarginConverter"/>
        <converters:VisibilityConverter x:Key="VisibilityConverter"/>
    </Application.Resources>
</Application>
